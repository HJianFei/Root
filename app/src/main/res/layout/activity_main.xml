<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text=""
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_is_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="是否有root权限"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_get_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="应用申请root权限"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_get_assemble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="应用申请无障碍权限"
                android:textColor="#fff"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_start_internet_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="开启国际服防封检测服务"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_start_internet_service_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="没有悬浮窗点我开启国际服防封检测服务"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_end_internet_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="国际服游戏结束"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_all_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="12dp"
                android:text="无限游客登录"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>